generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
    output        = "../../shared/src/prisma"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id                       String    @id @default(auto()) @map("_id") @db.ObjectId
    email                    String    @unique
    phoneNumber              Int?
    name                     String
    password                 String
    role                     Role      @default(USER)
    emailVerificationCode    String?
    emailVerificationExpires DateTime? @db.Date
    verified                 Boolean?  @default(false)
    deleted                  Boolean   @default(false)
    createdAt                DateTime  @default(now())
    updatedAt                DateTime  @updatedAt
}

model Product {
    id              String        @id @default(auto()) @map("_id") @db.ObjectId
    name            String
    description     String?
    price           Float
    currency        Currency      @default(TRY)
    inStock         Boolean       @default(true)
    isActive        Boolean       @default(true)
    quantity        Int           @default(0)
    images          String[]
    category        InnerCategory @relation(fields: [innerCategoryId], references: [id])
    tags            String[]
    createdAt       DateTime      @default(now())
    updatedAt       DateTime      @updatedAt
    innerCategoryId String        @db.ObjectId
}

model Category {
    id              String          @id @default(auto()) @map("_id") @db.ObjectId
    name            String
    innerCategories InnerCategory[]
}

model InnerCategory {
    id         String    @id @default(auto()) @map("_id") @db.ObjectId
    name       String
    products   Product[]
    Category   Category? @relation(fields: [categoryId], references: [id])
    categoryId String?   @db.ObjectId
}

enum Currency {
    USD
    TRY
    EUR
}

enum Role {
    USER
    ADMIN
}
