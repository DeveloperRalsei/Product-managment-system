generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
    output        = "../../shared/src/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                       Int       @id @default(autoincrement())
    email                    String    @unique
    phoneNumber              Int?
    name                     String
    password                 String
    role                     Role      @default(USER)
    emailVerificationCode    String?
    emailVerificationExpires DateTime?
    verified                 Boolean?  @default(false)
    deleted                  Boolean   @default(false)
    createdAt                DateTime  @default(now())
    updatedAt                DateTime  @updatedAt
}

model Product {
    id          Int      @id @default(autoincrement())
    name        String
    barcode     Int      @unique
    description String?
    price       Float
    currency    Currency @default(TRY)
    inStock     Boolean  @default(true)
    isActive    Boolean  @default(true)
    quantity    Int      @default(0)
    images      String[]
    videoUrl    String?
    tags        String[]
    rating      Int      @default(0)

    categories ProductCategory[]
    brand      Brand?            @relation(fields: [brandID], references: [id])
    brandID    Int?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Category {
    id               Int               @id @default(autoincrement())
    name             String
    bannerUrl        String?
    logoUrl          String?
    products         ProductCategory[]
    childCategories  Category[]        @relation("CategoryChildren")
    parentCategory   Category?         @relation("CategoryChildren", fields: [parentCategoryID], references: [id])
    parentCategoryID Int?
}

model ProductCategory {
    product    Product  @relation(fields: [productId], references: [id])
    productId  Int
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId Int

    @@id([productId, categoryId]) // Composite primary key
}

model Brand {
    id       Int       @id @default(autoincrement())
    name     String
    logoUrl  String?
    products Product[]
}

enum Currency {
    USD
    TRY
    EUR
}

enum Role {
    USER
    ADMIN
}
