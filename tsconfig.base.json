{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": false,
        "strict": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "#": ["./apps/shared/src/index.ts"],
            "@/*": ["./apps/web/src/*"],
            "~/*": ["./apps/api/src/*"]
        },
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    }
}
